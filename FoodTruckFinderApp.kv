#: import Window kivy.core.window.Window

<StartScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .15)
            Image:
                source: 'Logo.png'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .3)
            padding: (0, 50, 0, 0)
            GridLayout:
                cols: 2
                spacing: (10, 10)
                row_default_height: '165'
                row_force_default: True
                
                Button:
                    
                    background_normal: 'LoginButton.png'
                    background_down: 'LoginButton.png'
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'login_screen'

                Button:
                    background_normal: 'SignupButton.png'
                    background_down: 'SignupButton.png'
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'create_account_screen'
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .4)

            BoxLayout:
                orientation: 'horizontal'
                size_hint_x: .3
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: .3
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'vertical'
                BoxLayout:
                    orientation: 'vertical'
                Label:
                    text: 'For Trucks -->'
            Button:
                background_normal: 'FoodTruck.png'
                background_down: 'FoodTruck.png'
                border: (0, 0, 0, 0)
                size_hint_y: None
                height: '100dp'
                color: 0, 0, 0, 0
                on_press:
                    root.manager.transition.direction = 'down'
                    root.manager.current = 'truck_start_screen'

<TruckStartScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .4)
            Image:
                source: 'Logo.png'


        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .6)
            padding: (0, 50, 0, 0)
            GridLayout:
                cols: 2
                spacing: (10, 10)
                row_default_height: '165'
                row_force_default: True




                Button:
                    background_normal: 'TruckLoginButton.png'
                    background_down: 'TruckLoginButton.png'
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'truck_login_screen'
                
                Button:
                    background_normal: 'TruckSignupButton.png'
                    background_down: 'TruckSignupButton.png'
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'create_truck_screen'

                
        BoxLayout:
            orientation: 'vertical'


        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            Button:
                text: 'Back'
                height: 40
                font_size: 20
                font_name: 'Azonix.otf'
                on_press: root.back()
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .1
            




<LoginScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .3)
            Image:
                source: 'Logo.png'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .2)
            padding: (0, 20, 0, 20)

            Label:
                font_size: 25
                text: "Login"
                font_name: 'Azonix.otf'
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .32)
            GridLayout:
                cols: 2
                spacing: (3, 5)

                Label:
                    text: "Email:"
                    font_size: 15
                    font_name: 'Azonix.otf'
                TextInput:
                    id: email
                    multiline: False
                
                Label:
                    text: "Password:"
                    font_name: 'Azonix.otf'
                TextInput:
                    id: password
                    password: True
                    multiline: False
                
                Button:
                    text: "Login"
                    font_name: 'Azonix.otf'
                    on_press: root.login()
                Button:
                    text: "Back"
                    font_name: 'Azonix.otf'
                    on_press: root.back()
        BoxLayout:
            orientation: 'vertical'
                
<CreateAccountScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .3)
            Image:
                source: 'Logo.png'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .2)
            padding: (0, 20, 0, 20)
            Label:
                font_name: 'Azonix.otf'
                font_size: 25
                text: "Create New Account"
                
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .45)
            GridLayout:
                cols: 2
                spacing: (3, 5)

                Label:
                    text: "Email:"
                    font_name: 'Azonix.otf'
                TextInput:
                    id: email
                    multiline: False

                Label:
                    text: "Username:"
                    font_name: 'Azonix.otf'
                TextInput:
                    id: username
                    multiline: False
                
                Label:
                    text: "Password:"
                    font_name: 'Azonix.otf'
                TextInput:
                    id: password
                    password: True
                    multiline: False
                
                Button:
                    text: "Create Account"
                    font_name: 'Azonix.otf'
                    on_press: root.createAccount()
                Button:
                    text: "Back"
                    font_name: 'Azonix.otf'
                    on_press: root.back()
        BoxLayout:
            orientation: "vertical"
            

<TruckPageScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .2)
            Image:
                source: 'Logo.png'
        BoxLayout:
            orientation: 'vertical'
            id: boxLayout
            Label:
                id: truck_title
                text: ''
            



<CreateTruckScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .3)
            Image:
                source: 'Logo.png'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .2)
            padding: (0, 30, 0, 30)
            Label:
                font_name: 'Azonix.otf'
                font_size: 25
                text: "Create New Food \n   Truck Account"
                
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .57)
            GridLayout:
                cols: 2
                spacing: (3, 5)

                Label:
                    text: "Email:"
                    font_name: 'Azonix.otf'
                TextInput:
                    id: email
                    multiline: False

                Label:
                    text: "Truck Name:"
                    font_name: 'Azonix.otf'
                TextInput:
                    id: truck_name
                    multiline: False
                
                Label:
                    text: "Food Type:"
                    font_name: 'Azonix.otf'
                Spinner:
                    id: food_type
                    text: "Food Type"
                    font_name: 'Azonix.otf' 
                    values: ['Breakfast', 'Mexican', 'BBq', 'Comfort Food', 'Italian', 'Drinks', 'Desert']
                
                Label:
                    text: "Password:"
                    font_name: 'Azonix.otf'
                TextInput:
                    id: password
                    password: True
                    multiline: False
                
                Button:
                    text: "Create Account"
                    font_name: 'Azonix.otf'
                    on_press: root.createAccount()
                Button:
                    text: "Back"
                    font_name: 'Azonix.otf'
                    on_press: root.back()
        BoxLayout:
            orientation: "vertical"

