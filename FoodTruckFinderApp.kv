<UserScreen>:
    GridLayout:
        cols: 1
        spacing: (0, 10)
        BoxLayout:
            orientation:'vertical'
            padding: 0
            size_hint: (1, .2)
            Image:
                source: 'Logo.png'
        
        # creating the size
        # and the alignment of the tab 
        TabbedPanel:
            tab_width: Window.width / 2.5
            do_default_tab: False
        
            # Create tab 1
            TabbedPanelItem:
                text: 'Search Trucks'
                font_name: 'Azonix.otf'
                font_size: 13
                GridLayout:
                    cols: 1
                    spacing: (0, 5)
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: (1, .075)
                        
                        TextInput:
                            hint_text: 'Search'
                            multiline: False
                            height: 5
                            size_hint: (.7, 1)
                            focus: True
                            
                        Button:
                            text: 'Search'
                            font_name: 'Azonix.otf'
                            size_hint: (.3, 1)
                        
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: (1, .075)
                        Button:
                            id: Buttonone
                            text: 'Refresh'
                            font_name: 'Azonix.otf'
                            on_press: root.load_Trucks()

                    ScrollView:
                        
                        # setting the width of the scrollbar to 50pixels
                        bar_width: 5
                        # setting the color of the active bar using rgba
                        bar_color: 5, 10, 15, .8
                        # setting the color of the inactive bar using rgba
                        
                        # setting the content only to scroll via bar, not content
                        
                        do_scroll_y: True
                        GridLayout:
                            id: LayoutForTrucks
                            height: self.minimum_height
                            cols: 1
                            size_hint_y: None
                            row_default_height: '125dp'
                            row_force_default: True
                            spacing: (0, 40)
                            
                            
                            
            TabbedPanelItem:
                text: 'Truck Info'
                font_name: 'Azonix.otf'
                font_size: 13
                        
                
                        

        
            # Create 2nd tab
            TabbedPanelItem:
                text: 'Trucks Near You'
                font_name: 'Azonix.otf'
                font_size: 13
                BoxLayout:
                    Label:
                        text: 'Press button'
                    Button:
                        text: 'Click it'

            TabbedPanelItem:
                text: 'Account'
                font_size: 13
                font_name: 'Azonix.otf'

                

<TruckScreen>:
    GridLayout:
        cols: 1
        spacing: (0, 10)
        BoxLayout:
            orientation:'vertical'
            padding: 0
            size_hint: (1, .2)
            Image:
                source: 'Logo.png'
        
        # creating the size
        # and the alignment of the tab 
        TabbedPanel:
            tab_width: Window.width / 2.5
            do_default_tab: False
        
            # Create tab 1
            TabbedPanelItem:
                text: 'Control Panel'
                font_name: 'Azonix.otf'
                font_size: 13
                GridLayout:
                    cols: 1

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: (1, .2)

                        GridLayout:
                            cols: 2

                            Label:
                                text: 'Status'
                            Label: 
                                id: statusLabel
                                text: 'Closed'
                        
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: (1, .1)
                        Button:
                            text: 'Change Status'
                            on_press: root.change_status()
                    BoxLayout:
                        orientation: 'vertical'
                


            TabbedPanelItem:
                text: 'Events'
                font_name: 'Azonix.otf'
                font_size: 13

            TabbedPanelItem:
                text: 'Account'
                font_name: 'Azonix.otf'
                font_size: 13