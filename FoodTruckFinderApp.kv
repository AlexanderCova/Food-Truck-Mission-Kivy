#: import Window kivy.core.window.Window

<StartScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .2)
            Image:
                source: 'Logo.png'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .3)
            padding: (0, 50, 0, 0)
            GridLayout:
                cols: 1
                spacing: (0, 10)
                
                Button:
                    text: "Login"
                    font_size: 20
                    font_name: 'RobotoSlab-Medium.ttf'
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'login_screen'

                Button:
                    text: "Create Account"
                    font_size: 20
                    font_name: 'RobotoSlab-Medium.ttf'
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'create_account_screen'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .4)
                    
<LoginScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .3)
            Image:
                source: 'Logo.png'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .2)
            padding: (0, 20, 0, 20)

            Label:
                font_size: 25
                text: "Login"
                font_name: 'RobotoSlab-Medium.ttf'
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .32)
            GridLayout:
                cols: 2
                spacing: (3, 5)

                Label:
                    text: "Email:"
                    font_size: 15
                    font_name: 'RobotoSlab-Medium.ttf'
                TextInput:
                    id: email
                    multiline: False
                
                Label:
                    text: "Password:"
                    font_name: 'RobotoSlab-Medium.ttf'
                TextInput:
                    id: password
                    multiline: False
                
                Button:
                    text: "Login"
                    font_name: 'RobotoSlab-Medium.ttf'
                    on_press: root.login()
                Button:
                    text: "Back"
                    font_name: 'RobotoSlab-Medium.ttf'
                    on_press: root.back()
        BoxLayout:
            orientation: 'vertical'
                
<CreateAccountScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .3)
            Image:
                source: 'Logo.png'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .2)
            padding: (0, 20, 0, 20)
            Label:
                font_name: 'RobotoSlab-Medium.ttf'
                font_size: 25
                text: "Create New Account"
                
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .45)
            GridLayout:
                cols: 2
                spacing: (3, 5)

                Label:
                    text: "Email:"
                    font_name: 'RobotoSlab-Medium.ttf'
                TextInput:
                    id: email
                    multiline: False

                Label:
                    text: "Username:"
                    font_name: 'RobotoSlab-Medium.ttf'
                TextInput:
                    id: username
                    multiline: False
                
                Label:
                    text: "Password:"
                    font_name: 'RobotoSlab-Medium.ttf'
                TextInput:
                    id: password
                    multiline: False
                
                Button:
                    text: "Create Account"
                    font_name: 'RobotoSlab-Medium.ttf'
                    on_press: root.createAccount()
                Button:
                    text: "Back"
                    font_name: 'RobotoSlab-Medium.ttf'
                    on_press: root.back()
        BoxLayout:
            orientation: "vertical"
            


<UserScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation:'vertical'
            padding: 0
            size_hint: (1, .2)
            Image:
                source: 'Logo.png'
        
        # creating the size
        # and the alignment of the tab 
        TabbedPanel:
            tab_width: Window.width / 2.5
            do_default_tab: False
        
            # Create tab 1
            TabbedPanelItem:
                text: 'Search Trucks'
                font_name: 'RobotoSlab-Medium.ttf'
                BoxLayout:
                    orientation: 'horizontal'
                    height: 
                    TextInput:
                        text: 'Search'
                        multiline: False
                        height: 5
                        size_hint: (.7, 1)
                        focus: True
                        
                    Button:
                        text: 'Search'
                        font_name: 'RobotoSlab-Medium.ttf'
                        size_hint: (.3, 1)

                ScrollView:
                    
                    # setting the width of the scrollbar to 50pixels
                    bar_width: 5
                    # setting the color of the active bar using rgba
                    bar_color: 5, 10, 15, .8
                    # setting the color of the inactive bar using rgba
                    
                    # setting the content only to scroll via bar, not content
                    
                    do_scroll_y: True
                    GridLayout:
                        id: LayoutForTrucks
                        height: self.minimum_height
                        cols: 1
                        size_hint_y: None
                        row_default_height: '200dp'
                        row_force_default: True
                        Button:
                            id: Buttonone
                            text: 'one'
                            
                            on_press: root.load_Trucks()
                        Button:
                            text: 'two'
                        Button:
                            text: 'three'
                        Button:
                            text: 'four'
                        Button:
                            text: 'one'
                        Button:
                            text: 'two'
                        Button:
                            text: 'three'
                        Button:
                            text: 'four'
                        
                        
                        
                        

                        

        
            # Create 2nd tab
            TabbedPanelItem:
                text: 'Trucks Near You'
                font_name: 'RobotoSlab-Medium.ttf'
                BoxLayout:
                    Label:
                        text: 'Press button'
                    Button:
                        text: 'Click it'

            TabbedPanelItem:
                text: 'Account'
                font_name: 'RobotoSlab-Medium.ttf'
