#: import Window kivy.core.window.Window

<StartScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .2)
            Image:
                source: 'Logo.png'
        GridLayout:
            cols: 1
            BoxLayout:
                orientation: 'vertical'
                
                Button:
                    text: "Login"
                    background_color : 0, 0, 1, 1
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.transition.duration = 1
                        root.manager.current = 'login_screen'
            BoxLayout:
                orientation: 'vertical'

                Button:
                    text: "Create Account"
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'create_account_screen'
                    
<LoginScreen>:
    GridLayout:
        cols: 1
        TextInput:
            id: newtext
        Button:
            text: 'getText'
            on_press: root.login()
            
                
<CreateAccountScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .3)
            Image:
                source: 'Logo.png'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .2)
            padding: (0, 20, 0, 20)
            Label:
                font: 'RobotoSlab-Medium.ttf'
                font_size: 25
                text: "Create New Account"
                
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .4)
            GridLayout:
                cols: 2

                Label:
                    text: "Email:"
                TextInput:
                    id: email
                
                Label:
                    text: "Username:"
                TextInput:
                    id: username
                
                Label:
                    text: "Password:"
                TextInput:
                    id: password
                
                Button:
                    text: "Create Account"
                Button:
                    text: "Back"
                    on_press: root.back()
        BoxLayout:
            orientation: "vertical"
            


<UserScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation:'vertical'
            padding: 0
            size_hint: (1, .2)
            Image:
                source: 'Logo.png'
        
        # creating the size
        # and the alignment of the tab 
        TabbedPanel:
            tab_width: Window.width / 2.5
            do_default_tab: False
        
            # Create tab 1
            TabbedPanelItem:
                text: 'Search Trucks'
                BoxLayout:
                    orientation: 'horizontal'
                    height: 
                    TextInput:
                        text: 'Search'
                        multiline: False
                        height: 5
                        size_hint: (.7, 1)
                        focus: True
                        
                    Button:
                        text: 'Search'
                        size_hint: (.3, 1)

                ScrollView:
                    
                    # setting the width of the scrollbar to 50pixels
                    bar_width: 5
                    # setting the color of the active bar using rgba
                    bar_color: 5, 10, 15, .8
                    # setting the color of the inactive bar using rgba
                    
                    # setting the content only to scroll via bar, not content
                    
                    do_scroll_y: True
                    GridLayout:
                        id: LayoutForTrucks
                        height: self.minimum_height
                        cols: 1
                        size_hint_y: None
                        row_default_height: '200dp'
                        row_force_default: True
                        Button:
                            id: Buttonone
                            text: 'one'
                            on_press: root.load_Trucks()
                        Button:
                            text: 'two'
                        Button:
                            text: 'three'
                        Button:
                            text: 'four'
                        Button:
                            text: 'one'
                        Button:
                            text: 'two'
                        Button:
                            text: 'three'
                        Button:
                            text: 'four'
                        
                        
                        
                        

                        

        
            # Create 2nd tab
            TabbedPanelItem:
                text: 'Trucks Near You'
                BoxLayout:
                    Label:
                        text: 'Press button'
                    Button:
                        text: 'Click it'

            TabbedPanelItem:
                text: 'Account'
